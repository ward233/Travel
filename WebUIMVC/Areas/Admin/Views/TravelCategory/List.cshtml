@model PagedList<Model.TravelCategory>

@{
    ViewBag.Title = "查看旅游项目";
}
<div class="panel panel-headline">
    <div class="panel-heading">
        <h3 class="panel-title">查看旅游项目</h3>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>标题</th>
                    <th>创建时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.CreateDate</td>
                        <td>
                            @Html.ActionLink("查看","Detail",new {Id = item.Id},new {@class = "btn btn-primary btn-sm"})
                            @Html.ActionLink("修改","Edit",new {Id = item.Id},new {@class = "btn btn-warning btn-sm"})
                            @Html.ActionLink("删除","Delete",new {Id = item.Id},new {@class = "btn btn-danger btn-sm"})
                        </td>
                    </tr>

                }
            </tbody>
        </table>
        <div class="text-center">

            @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageIndex", ContainerTagName = "ul", CssClass = "pagination", CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>", DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>", PagerItemTemplate = "<li>{0}</li>", Id = "bootstrappager" })
        </div>


    </div>
</div>