@using System.Web.UI.WebControls
@model IEnumerable<Model.TravelCategory>

@{
    ViewBag.Title = "添加旅游行程";
}

@section head
{
    <style>
        .fancy-checkbox input[type="checkbox"] + span:before {
            height: 17px;
        }

        .formWarp {
            margin-top: 20px;
        }
    </style>

    <link href="/Content/assets/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}
<div class="panel panel-headline">
    <div class="panel-heading">
        <h3 class="panel-title">添加旅游行程</h3>

    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Add", "TravelStage", FormMethod.Post))
        {


            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-2 col-sm-4 col-xs-6">
                        <label class="fancy-checkbox">
                            @Html.TextBox("Id", item.Id, new { type = "checkbox" })
                            <span>@item.Title</span>
                        </label>
                    </div>
                }

            </div>

            <div class="form-horizontal formWarp">

                <div class="form-group">

                    @Html.TextBox("StartDate", null, new { @class = "form-control input-lg", placeholder = "出发日期" })
                </div>


                <div class="form-group">
                    <div class="input-group ">

                        @Html.TextBox("days", null, new { @class = "form-control input-lg", placeholder = "天数" })
                        <span class="input-group-addon">天</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group ">


                        @Html.TextBox("Count", null, new { @class = "form-control input-lg", placeholder = "总人数" })
                        <span class="input-group-addon">人</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBox("Price", null, new { @class = "form-control input-lg", placeholder = "价格" })
                        <span class="input-group-addon">元</span>
                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">提交</button>
                </div>
            </div>

        }
    </div>

</div>
@section foot
{
    <script src="/Content/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/Content/assets/js/bootstrap-datetimepicker.zh-CN.js"></script>
    <script>

        $('#StartDate').datetimepicker({
            language: 'zh-CN',
            format: 'yyyy-mm-dd',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });

    </script>
}
